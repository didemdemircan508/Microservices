@model List<CourseViewModel>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                @if (Model.Any())
                {
                    <table class="table table-striped">

                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs İsim</th>
                                <th>Fiyat</th>
                                <th>Süre</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    <th>@item.Name</th>
                                    <th>@item.Price</th>
                                    <th>@item.Feature.Duration</th>
                                </tr>

                            }
                        </tbody>
                    </table>


                }
                else
                {
                    <div class="alert alert-info">Kurs Bulunamadı</div>

                }

            </div>
        </div>
    </div>
</div>
